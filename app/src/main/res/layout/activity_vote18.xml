<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212729"
    tools:context=".CreationmemeActivity">

    <Button
        android:id="@+id/buttonvote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000FF"
        android:text="C'est bon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voteresult"
        app:layout_constraintVertical_bias="0.336"
        app:rippleColor="#2196F3" />

    <Button
        android:id="@+id/buttonmoins"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="#0000FF"
        android:text="-"
        android:onClick="decrement"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.775"
        app:rippleColor="#2196F3" />

    <ImageView
        android:id="@+id/imagejoueurx"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pngegg" />

    <ImageView
        android:id="@+id/Meme"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421"
        app:srcCompat="@drawable/meme18" />

    <TextView
        android:id="@+id/voteresult"
        android:layout_width="82dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#438C17"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonplus"
        app:layout_constraintStart_toEndOf="@+id/buttonmoins"
        app:layout_constraintTop_toBottomOf="@+id/Meme"
        app:layout_constraintVertical_bias="0.129" />

    <Button
        android:id="@+id/buttonplus"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="#0000FF"
        android:text="+"
        android:onClick="increment"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.835"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.776"
        app:rippleColor="#2196F3" />

    <TextView
        android:id="@+id/themevote"
        android:layout_width="220dp"
        android:layout_height="87dp"
        android:text="TextView"
        android:gravity="center"
        android:textColor="#438C17"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Meme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toEndOf="@+id/imagejoueurx"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <TextView
        android:id="@+id/ecriture1"
        android:layout_width="350dp"
        android:layout_height="73dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:maxLength="30"
        android:maxLines="5"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/Meme"
        app:layout_constraintEnd_toEndOf="@+id/Meme"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Meme"
        app:layout_constraintTop_toTopOf="@+id/Meme"
        app:layout_constraintVertical_bias="0.064"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeStepGranularity="2sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>